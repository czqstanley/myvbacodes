tws.Name = "Other High Risk"
Set target = tws.Cells(3, 1)

Set pvtc = ActiveWorkbook.PivotCaches.Create(SourceType:=xlDatabase, SourceData:=source)
Set pvt = pvtc.CreatePivotTable(Tabledestination:=target, TableName:="TB1")


